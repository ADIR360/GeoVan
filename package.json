{
  "name": "geovan-vanet-system",
  "version": "1.0.0",
  "description": "GeoVAN VANET Security & Vehicle Tracking System",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd local-backend && npm run dev:all",
    "dev:frontend": "cd frontend && npm run dev:frontend-only",
    "install:all": "npm install && cd local-backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start:backend": "cd local-backend && npm start",
    "start:websocket": "cd local-backend && npm run websocket",
    "test": "cd frontend && npm run test",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix"
  },
  "keywords": [
    "vanet",
    "vehicle",
    "security",
    "tracking",
    "real-time",
    "websocket",
    "react",
    "nodejs"
  ],
  "author": "GeoVAN Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
